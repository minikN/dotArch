[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = linux-surface

[Action]
Description = Move kernel to new local after installation
When = PostTransaction
Exec = /usr/bin/mv /boot/vmlinuz-linux-surface /boot/initramfs-linux-surface.img /boot/initramfs-linux-surface-fallback.img /boot/EFI/arch/.
