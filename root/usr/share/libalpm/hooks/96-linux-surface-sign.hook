[Trigger]
Operation = Install
Operation = Upgrade
Type = Package
Target = linux-surface

[Action]
Description = Signing kernel with MOK for secure boot
When = PostTransaction
Exec = /usr/bin/sbsign --key /etc/refind.d/keys/refind_local.key --cert /etc/refind.d/keys/refind_local.crt --output /boot/EFI/arch/vmlinuz-linux-surface /boot/EFI/arch/vmlinuz-linux-surface
Depends = sbsigntools
